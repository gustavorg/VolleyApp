<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="utp.edu.pe.volleyapp.UserProfileActivity"
    android:weightSum="1"
    tools:showIn="@layout/activity_user_profile">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewUsername"
        android:layout_gravity="right"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewUsername"
        android:layout_marginTop="66dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Incomes"
        android:id="@+id/IncomesButton"
        android:background="#6fe2ff"
        android:textColor="#f8f9f9"
        android:layout_above="@+id/StadisticButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENTER EXPENSES"
        android:shadowRadius="10"
        android:id="@+id/ExpensesButton"
        android:background="#6fe2ff"
        android:textColor="#f8f9f9"
        android:layout_above="@+id/IncomesButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Stadistic"
        android:id="@+id/StadisticButton"
        android:background="#6fe2ff"
        android:textColor="#f8f9f9"
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/logout"
        android:layout_below="@+id/textViewUsername"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="39dp" />

</RelativeLayout>

